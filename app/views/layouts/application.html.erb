  <% end %>
  </p> -->
  <div class="m-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav">
                    <%= link_to "Home", hotels_path,  class: "nav-item nav-link active" %>
                    <%= link_to "Admin", hotels_path,  class: "nav-item nav-link active", style: "margin-left: 50px;" %>

                </div>
                <div class="navbar-nav ms-auto">
                    <%= link_to "Sign-Out", destroy_user_session_path,  class: "nav-item nav-link active", id: "sign_out" if current_user.present?  %>
                    <%= link_to "#{current_user.cart_items.count} Cart", view_carts_path, class: "nav-item nav-link", id: "item-cart" if current_user.present? %>
                </div>
            </div>
        </div>
    </nav>
  </div>
    <%= yield %>
  </body>
</html>
<script type="text/javascript">
  $('#sign_out').hover (function (){
    $('#sign_out').css('color','green')
    $(this).css({"text-decoration":"underline"});
  })
  $('#sign_out').on("mouseout", function (){
    $('#sign_out').css('color','black')
    $(this).css({"text-decoration":"none"})
  })

  $('#item-cart').hover (function (){
    $('#item-cart').css('color','orange')
    
  })
  $('#item-cart').on("mouseout", function (){
    $('#item-cart').css('color','black')
  })
</script>
